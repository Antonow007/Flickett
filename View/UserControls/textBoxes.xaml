<UserControl x:Class="Flickett.View.UserControls.textBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flickett.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        
        <TextBox Name="txtInput"  VerticalContentAlignment="Center" FontSize="16"
                 FontWeight="Light" Background="#333333" BorderThickness="0,0,0,1"/>
        <TextBlock x:Name="tbPlaceholder" FontSize="16" FontWeight="Light" Text="hello there"
                   Foreground="DarkGray" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Right" Content="X"
                Background="Transparent" Foreground="LightGray" BorderThickness="0" />

    </Grid>
</UserControl>
